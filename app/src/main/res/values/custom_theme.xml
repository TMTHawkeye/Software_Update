<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools">

    <style name="DefaultActionBarTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:actionBarStyle" tools:targetApi="11">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarSize" tools:targetApi="11">?actionBarSize</item>
        <item name="actionBarSize">?actionBarSize</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background" tools:targetApi="11">@color/light_green</item>
        <item name="background">@color/light_green</item>
        <item name="android:height" tools:targetApi="11">@dimen/_14sdp</item>
        <item name="height">@dimen/_14sdp</item>
    </style>

</resources>